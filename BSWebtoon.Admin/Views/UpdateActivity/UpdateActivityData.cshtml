@{
    ViewData["Title"] = "UpdateActivityData";
}
@section topCss{
    <style>
        .read_activity {
            width: 100%;
            overflow-x: scroll;
        }

    </style>
}

    <div id="app" class=" w-100 read_activity">
        <table class="table text-center  ">
            <thead>
                <tr>
                    <th>id</th>
                    <th>活動圖片</th>
                    <th>活動名稱</th>
                    <th>活動開始時間</th>
                    <th>活動結束時間</th>
                    <th>活動背景色號</th>
                    <th>活動內容介紹</th>
                    <th>活動負責人</th>
                    <th>活動創建時間</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="Activity in ActivityList">
                    <td class="align-middle">{{Activity.activityId}}</td>
                    <td class="align-middle">
                        <img class="w-25" :src="Activity.activityImage" alt="" />
                    </td>
                    <td class="align-middle">{{Activity.activityName}}</td>
                    <td class="align-middle">{{Activity.activityStartTime}}</td>
                    <td class="align-middle">{{Activity.activityEndTime}}</td>
                    <td class="align-middle">{{Activity.activityBgColor}}</td>
                    <td class="align-middle">{{Activity.activityContent}}</td>
                    <td class="align-middle">{{Activity.activityEmployeeName}}</td>
                    <td class="align-middle">{{Activity.createTime}}</td>
                    <td class="align-middle">
                        <button v-on:click="selectEdit(Activity)" class="btn btn-primary" data-toggle="modal"
                            data-target="#edit-modal">
                            編輯
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>


    <!-- 編輯Modal -->
    <!-- 編輯Modal -->
		<div class="modal fade" id="edit-modal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<p>請編輯</p>
					</div>
					<div class="modal-body container">
						<div class="row">
							<div class="col-12 col-md-6 mb-3">
								<label>活動圖片</label>
								<input readonly v-model="currentActivity.activityImage" class="form-control" type="text" />
							</div>
							<div class="col-12 col-md-6 mb-3">
								<label>活動名稱</label>
								<input readonly  v-model="currentActivity.activityName" class="form-control"
									type="text" />
							</div>
							<div class="col-12 col-md-6 mb-3">
								<label>活動開始時間</label>
								<input readonly v-model="currentActivity.activityStartTime" class="form-control"
									type="text" />
							</div>
							<div class="col-12 col-md-6 mb-3">
								<label>活動結束時間</label>
								<input readonly v-model="currentActivity.activityEndTime" class="form-control" type="text" />
							</div>
							<div class="col-12 col-md-6 mb-3">
								<label>活動背景色號</label>
								<input readonly v-model="currentActivity.activityBgColor" class="form-control" type="color" />
							</div>
							<div class="col-12 col-md-6 mb-3">
								<label>活動內容介紹</label>
								<input readonly v-model="currentActivity.activityContent" class="form-control" type="text" />
							</div>
							<div class="col-12 col-md-6 mb-3">
								<label>活動負責人</label>
								<input readonly v-model="currentActivity.activityEmployeeName" class="form-control" type="text" />
							</div>
							
						</div>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">
							取消
						</button>
						<button v-on:click="updatePokemon" type="button" class="btn btn-primary">
							更新
						</button>
					</div>
				</div>
			</div>
		</div>


    @section endJS{
		<!-- Axios -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"
		integrity="sha512-bZS47S7sPOxkjU/4Bt0zrhEtWx0y0CRkhEp8IckzK+ltifIIE9EMIMTuT/mEzoIMewUINruDBIR/jJnbguonqQ=="
		crossorigin="anonymous"></script>

    <script src="~/js/UpdateActivityData.js"></script>
 }

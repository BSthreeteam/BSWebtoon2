@{
    ViewData["Title"] = "CashPlanView";
}

@section topCss{
      <link rel="stylesheet" href="~/style/CashPlanstyle.css" />
}


<h1 class="top">儲值金幣</h1>

  <h2>
    <p>現有金幣</p>
    <span>1,000金幣</span>
  </h2>

  <h3>金幣 <span>儲值</span></h3>

  <hr>
  <hr>


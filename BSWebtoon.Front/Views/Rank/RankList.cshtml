@model BSWebtoon.Front.Models.ViewModels.Rank.RankViewModel_ClickRecord


@{
    var id = Model.FirstRank.TagId;
}

@section topCss{
<link rel="stylesheet" href="~/style/RankListstyle.css" />
}

@Html.Partial("NavPartial");



<div class="Rank ">
    <div class="container Rank_content">
        @if (Model == null)
        {
            <div class="text m-auto">
                <h2 class="text-white text-center">排行活動尚未開始~~ 敬請期待~~</h2>

            </div>
        }
        else
        {
            <div class="content">
                <a class="work_big" href="#">
                    <div class="work_big_bg">
                        <img src="@Model.FirstRank.BgCover" alt="背景" class="rank_pic_bg">
                        @*<img src="https://tw-a.kakaopagecdn.com/P/C/148/bg/1x/f485a521-3410-48a7-a3de-793514f1237c.webp"
                            alt="">*@
                    </div>
                    <div class="comic_material">
                        <div class="work_big_title">
                            <img src="@Model.FirstRank.ComicNameImage" alt="標題" class="rank_pic_title">
                            @*<img src="https://tw-a.kakaopagecdn.com/P/C/205/t2/2x/8848e3ef-a605-412f-9d37-d544e22af515.png"
                                alt="">*@
                        </div>
                        <div class="introduction">
                            @Model.FirstRank.Introduction
                            @*我和朋友接吻了，但我們都是女的!這段曖昧不明的關係究竟該如何定義?*@
                        </div>
                    </div>
                    <div class="work_big_Ranking">
                        <p class="Ranking_num">1</p>
                        <i class="fa-solid fa-caret-up"></i>
                        <p class="diff">@Model.FirstRank.Diff</p>
                    </div>
                    <div class="work_big_pic">
                        @if (@Model.FirstRank.BannerVideoWeb != string.Empty)
                        {
                            <video>
                                <source src="@Model.FirstRank.BannerVideoWeb" type="video/webm">
                            </video>
                        }
                        else
                        {
                            <img src="@Model.FirstRank.ComicFigure" alt="@Model.FirstRank.ComicName" class="rank_pic_people">
                        }
                    </div>
                </a>

                <template id="workTemplate">
                    @foreach (var item in Model.OtherRank)
                    {
                        <a class="work" href="#">
                            <div class="work_bg">
                                <img src="@item.BgCover" alt="背景">
                                @*<img src="https://tw-a.kakaopagecdn.com/P/C/148/bg/1x/f485a521-3410-48a7-a3de-793514f1237c.webp"
                                    alt="">*@
                            </div>
                            <img class="work_pic"
                         src="@item.ComicWeekFigure" alt="@item.ComicName">

                            <div class="title_img">
                                <img src="@item.ComicNameImage"
                             alt="@item.ComicName">
                            </div>
                            <div class="work_status">
                                <span>UP</span>
                            </div>
                            <div class="work_Ranking">
                                <p class="Ranking_num" id="rank_num">2</p>
                                @if (@item.Diff > 0)
                                {
                                    <i class="fa-solid fa-caret-up"></i>
                                    <p class="diff">@item.Diff</p>
                                }
                                else if (@item.Diff == 0)
                                {
                                    <i class="fa-solid fa-caret-up"></i>
                                    <p class="diff">-</p>

                                }
                                else
                                {
                                    <i class="fa-solid fa-caret-down"></i>
                                    <p class="diff">@item.Diff</p>
                                }

                            </div>
                        </a>
                    }
                </template>


                <template id="blackTemplate">
                    <div class="black">
                        <div class="black">
                            <div class="row">
                                <div class="comics_nont col-4 col-md-3 col-lg-2_5">
                                    <div class="img-box"></div>
                                </div>
                                <div class="comics_nont col-4 col-md-3 col-lg-2_5">
                                    <div class="img-box"></div>
                                </div>
                                <div class="comics_nont col-4 col-md-3 col-lg-2_5">
                                    <div class="img-box"></div>
                                </div>
                                <div class="comics_nont col-4 col-md-3 col-lg-2_5">
                                    <div class="img-box"></div>
                                </div>
                                <div class="comics_nont col-4 col-md-3 col-lg-2_5">
                                    <div class="img-box"></div>
                                </div>
                            </div>
                        </div>
                </template>
            </div>

        }
    </div>
</div>







@section endJS{
<script src="https://kit.fontawesome.com/2dbc4e25d3.js" crossorigin="anonymous"></script>
<script>
    let id = @id;

</script>
<script src="~/js/RankList.js"></script>

}
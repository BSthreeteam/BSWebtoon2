        </div>
    </div>
</nav>

    <!-- 第一列 -->
    <div class="container rank-top1">
        <div class="row .row-cols-md-1 card_up_row ">

            <template id="cardTemplate_up">
                <!-- 圖片區 -->
                <div class="card card_up col p-0">
                    <img id="short_pic_up_bgc" class="short_pic_up" src="" alt="背景">

                    <!-- 影片 -->
                    <video id="short_pic_cover_up_video" class="short_pic_cover_up_vi" loop="true" autoplay="true"
                        muted="true">
                        <source id="short_pic_cover_up_video_source" src="">
                    </video>

                    <img id="short_pic_cover_up_cover" class="short_pic_cover_up_cvr" src="#" alt="封面">
                </div>
                <!-- 文字區 -->
                <div class="text">
                    <span class="card_up_spen"></span>
                    <p class="card_up_p_tital"></p>
                    <p class="card_up_p"></p>
                </div>
                <!-- 排行標籤區 -->
                <div class="card_up_ranking">
                    <span class="card_up_ranking_number"></span>
                </div>
            </template>

        </div>
    </div>

    <!-- 下面卡牌 -->
    <main>
        <div class="container " >
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 row_down">

                <template id="cardTemplate">
                    <div class="card short_down_card col p-0">
                        <a href="#">
                            <!-- 排行 -->
                            <span class="short_down_span danger"></span>
                            <!-- 背景 -->
                            <img class="short_pic" src="" alt="">
                            <!-- <video loop="true" autoplay="true" muted="true">
                                <source src="">
                            </video>  -->
                            <!-- 封面 -->
                            <img class="short_pic_cover" src="" alt="">
                            <!-- 標題 -->
                            <div class="short_down_bgc">
                                <p class="short_down_p my-0 "></p>
                            </div>
                        </a>
                    </div>
                </template>

            </div>
        </div>
    </main>

@section endJS{
      <script src="~/js/Rank.js"></script>
}
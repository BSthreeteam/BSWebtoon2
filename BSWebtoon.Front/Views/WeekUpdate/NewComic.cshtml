            </li>
            <li class="nav-item">
                <a class="nav-link" href="/WeekUpdate/FinishComic">完結</a>
            </li>
        </ul>
    </nav>

<div class="weekly">
    <div class="container week_content ">

        @foreach (var item in Model)
        {
            <a  class="workContent" href="/WorksPage/WorksPage/@item.ComicId">

                <div class="pic_bgc">
                    <img src="@item.BgCover">
                </div>
                <div class="comic_information">

                    <div class="material">
                        <div class="date">
                            <p>@item.PublishDate</p>
                        </div>
                        <div class="title_pic">
                            <img src="@item.ComicNameImage" alt="">
                        </div>
                        <div class="comic_introduce">
                            <p>@item.Introduction</p>
                        </div>
                        <p class="author">@item.Author,@item.Painter​</p>
                    </div>

                    <div class="p_pic">
                        <img src="@item.ComicFigure" alt="">
                    </div>
                </div>
            </a>
        }

    </div>
</div>



@section endJS{

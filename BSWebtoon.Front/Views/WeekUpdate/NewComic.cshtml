<div class="weekly">
    <div class="container week_content ">

        @foreach (var item in Model)
        {
            <div class="workContent">

                <div class="pic_bgc">
                    <img src="@item.BgCover">
                </div>
                <div class="comic_information">

                    <div class="material">
                        <div class="date">
                            <p>@item.PublishDate</p>
                        </div>
                        <div class="title_pic">
                            <img src="@item.ComicNameImage" alt="">
                        </div>
                        <div class="comic_introduce">
                            <p>@item.Introduction</p>
                        </div>
                        <p class="author">@item.Author,@item.Painter​</p>
                    </div>

                    <div class="p_pic">
                        <img src="@item.ComicFigure" alt="">
                    </div>
                </div>
            </div>
        }

    </div>
</div>


@section endJS{
<script src="~/js/WeekNewComic.js"></script>
}

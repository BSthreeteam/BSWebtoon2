                                        <img src="@item.BgCover" alt="">
                                    </div>
                                    <img class="work_pic" src="@item.ComicWeekFigure">

                                    <div class="title_img">
                                        <img src="@item.ComicNameImage" alt="">
                                    </div>
                                    @if(item.ComicStatus == 3 && t == DayOfWeek.Monday){
                                    <div class="work_status">

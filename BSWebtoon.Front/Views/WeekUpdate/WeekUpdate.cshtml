            <div class="Monday">
                <h2 id="scrollspyHeading1" class="Monday_title">星期一</h2>
                <div class="content">
                    @foreach (var items in Model)
                    {
                        if (items.WeekDay == 1)
                        {
                            foreach (var item in items.WeekComicLongList)
                            {
                                <a class="work_long" href="#">
                                    <div class="work_long_bg">
                                        <img src="@item.BgCover">
                                    </div>

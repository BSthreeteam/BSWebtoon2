                        </div>

                        <div class="comics_nont col-4 col-md-3 col-lg-2_5">
                            <div class="img-box"></div>
                        </div>

                    </div>
                </div>
            </div>


            </div>
        </div>
    </div>

@section endJS{
<script src="~/js/WeekFinishComic.js"></script>
}